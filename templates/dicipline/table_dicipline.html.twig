<h1>Liste des Disciplines</h1>

<table class="categorie-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for dicipline in diciplines %}
            <tr>
                <td>{{ dicipline.id }}</td>
                <td>{{ dicipline.nomDicipline }}</td>
                <td>
                    <a href="{{ path('dicipline_modifier', {id: dicipline.id}) }}">
                        <button class="btn-danger">Modifier</button>
                    </a>
                </td>
                <td>
                    <form action="{{ path('dicipline_supprimer', {id: dicipline.id}) }}" method="post" onsubmit="return confirm('Supprimer cette discipline ?');">
                        <button class="btn-danger" type="submit">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="4">Aucune discipline trouvée.</td></tr>
        {% endfor %}
    </tbody>
</table>
