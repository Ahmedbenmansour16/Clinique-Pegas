        }

        /* ✅ Table Styling */
.categorie-table {
    width: 100%;
    border-collapse: collapse;
    margin: 20px 0;
    font-size: 14px;
    border-radius: 10px;
    overflow: hidden;
    background: var(--light);
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.1);
}

/* ✅ Table Header */
.categorie-table thead {
    background: var(--blue);
    color: var(--light);
    font-weight: 600;
}

.categorie-table th {
    padding: 12px;
    text-align: left;
    font-weight: bold;
}

/* ✅ Table Rows */
.categorie-table tbody tr {
    border-bottom: 1px solid var(--grey);
    transition: all 0.3s ease-in-out;
}

.categorie-table tbody tr:hover {
    background: var(--light-blue);
    transition: all 0.3s ease-in-out;
}

/* ✅ Table Cells */
.categorie-table td {
    padding: 10px;
    color: var(--dark);
}

/* ✅ Action Buttons */
.btn-danger, .btn-update {
    display: inline-block;
    padding: 6px 12px;
    font-size: 13px;
    text-decoration: none;
    font-weight: bold;
    border-radius: 6px;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    border: none;
}

/* ✅ Update Button */
.btn-update {
    background-color: var(--yellow);
    color: var(--dark);
}

.btn-update:hover {
    background-color: #e0a800;
}

/* ✅ Delete Button */
.btn-danger {
    background-color: var(--red);
    color: var(--light);
}

.btn-danger:hover {
    background-color: #c82333;
}

/* ✅ Responsive Design */
@media screen and (max-width: 768px) {
    .categorie-table {
        font-size: 12px;
    }

    .btn-danger, .btn-update {
        padding: 5px 8px;
        font-size: 12px;
    }
}

    </style>
{% endblock %}

